{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "lib/*": [
                "./lib/*"
            ],
            "assets/*": [
                "./assets/*"
            ],
            "features/*": [
                "./features/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}
